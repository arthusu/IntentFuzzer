<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/type_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="4dp"
        android:layout_gravity="center_horizontal"
        app:singleSelection="true"/>

    <ListView
        android:id="@+id/cmp_listview"
        android:layout_marginTop="5dip"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </ListView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:layout_marginTop="10dip" >

        <Button
            android:id="@+id/fuzz_all_null"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginHorizontal="4dp"
            android:text="@string/fuzz_all_null"
            android:visibility="gone">
        </Button>
        <Button
            android:id="@+id/fuzz_all_se"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/fuzz_all_null"
            android:layout_marginHorizontal="4dp"
            android:text="@string/fuzz_all_se"
            android:visibility="gone">
        </Button>
    </RelativeLayout>

</LinearLayout>
